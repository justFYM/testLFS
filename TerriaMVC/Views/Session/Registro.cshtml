@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}

<h1 style="text-align:center" class="mb-4">Regístrate</h1>
<div class="card">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <form asp-controller="Usuarios" asp-action="Registro">

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn-primary btn">Regístrate</button>
            <a class="btn btn-success" asp-action="Login">Ingrese a su sesión</a>
            <a class="btn btn-success" asp-action="LoginExterno" asp-route-proveedor="Microsoft">Continuar con Microsoft</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
